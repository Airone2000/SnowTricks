{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">

    {% for family in families %}
        {% if family.tricks|length > 0 %}
            <div class="family columns">
                {% for trick in family.tricks %}
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title h5">{{ trick.name }}</div>
                            <div class="card-subtitle text-gray">{{ family.name }}</div>
                        </div>
                        <div class="card-image">
                            <img class="img-responsive" src="{{ asset( trick.images.first().pathname ) }}" width="300" height="100">
                        </div>
                        <div class="card-body"></div>
                        <div class="card-footer">
                            <a href="" class="btn btn-primary">Voir</a>
                            <a href="" class="btn btn-link">Modifier</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endfor %}

    </div>

{% endblock %}