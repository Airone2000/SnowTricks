{% set avatar = user.avatarPathname %}
{% if avatar is not null  %}
<img src="{{ asset(avatar) | imagine_filter('thumbnailer') }}" class="avatar img-responsive img-rounded">
{% else %}
<img src="http://via.placeholder.com/150/5?text={{ user.nickname|slice(0,1) }}" class="avatar img-responsive img-rounded">
{% endif %}