{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('stylesheets/trick/trick/edit.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <div class="columns">
            <div class="form-container col-xl-4 col-lg-6 col-md-12 col-ml-auto col-mr-auto">

                <h1 class="text-center text-bold">{{ trick.name ?? 'Sans titre' }}</h1>

                {# Afficher message default/success/erreur #}
                {% for success in app.flashes('success') %}
                    <p class="toast toast-success text-center">{{ success }}</p>
                {% else %}

                    {% if form_errors(edit_form) %}
                        <p class="toast toast-error text-center">Veuillez vérifier votre saisie</p>
                    {% else %}
                        <p class="text-gray text-center">Vous modifiez la figure</p>
                    {% endif %}

                {% endfor %}



                <div class="divider"></div>
                <br>

                {{ form_start(edit_form) }}

                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.introduction) }}
                    {{ form_row(edit_form.family) }}

                    {# Images #}
                    {% for form_image in edit_form.images %}

                        {% if loop.first %}
                            <div id="{{ form_image.parent.vars.id }}" data-prototype="{{ form_row(form_image.parent.vars.prototype)|e }}">
                        {% endif %}

                        <div class="image">

                            <label class="form-label">Image :</label>
                            <div style="display: none;">{{ form_widget(form_image) }}</div>

                            <div class="text-center">
                                <img src="{{ asset(form_image.vars.value.pathname) }}" class="img-responsive">
                                <button class="remove-existing-image btn btn-link btn-block btn-sm">Supprimer cette image</button>
                            </div>
                        </div>

                        {% if loop.last %}
                            </div>
                        {% endif %}

                    {% endfor %}

                    {# Videos #}
                    {% for form_video in edit_form.videos %}

                        {% if loop.first %}
                            <div id="{{ form_video.parent.vars.id }}" data-prototype="{{ form_row(form_video.parent.vars.prototype)|e }}">
                        {% endif %}

                        <div class="video">
                            {{ form_widget(form_video) }}
                            <button class="remove-existing-video btn btn-link btn-block btn-sm">Supprimer cette vidéo</button>
                        </div>

                        {% if loop.last %}
                            </div>
                        {% endif %}
                    {% endfor %}

                    {# Buttons media #}
                    <div class="form-group">
                        <label class="form-label">Ajouter des média :</label>
                        <p class="btn-group btn-group-block form-group">
                            <button type="button" class="add-image btn btn-sm">Ajouter une image</button>
                            <button type="button" class="add-video btn btn-sm">Ajouter une vidéo</button>
                            {{ form_errors(edit_form) }}
                        </p>
                    </div>

                    <br>

                    <div>
                        <button type="submit" class="btn btn-primary btn-block text-bold text-uppercase">Modifier</button>
                    </div>

                {{ form_end(edit_form) }}

                {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-block btn-sm btn-link">Supprimer cette figure</button>
                {{ form_end(delete_form) }}

                <br>
                <div class="divider text-center" data-content="LIENS ANNEXES"></div>
                <div class="text-center">
                    <a href="{{ path('figures_index') }}" class="btn btn-link">Liste des figures</a>
                    <a href="{{ path('figures_new') }}" class="btn btn-link">Créer une figure</a>
                    <a href="{{ path('figures_familles_index') }}" class="btn btn-link">Liste des groupes</a>
                    <a href="{{ path('figures_familles_new') }}" class="btn btn-link">Créer un groupe</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('javascripts/trick/image_subform.js') }}"></script>
    <script src="{{ asset('javascripts/trick/video_subform.js') }}"></script>
{% endblock %}
