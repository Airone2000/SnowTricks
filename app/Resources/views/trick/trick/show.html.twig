{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trick</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trick.name }}</td>
            </tr>
            <tr>
                <th>Family</th>
                <td>{{ trick.family.name }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ trick.introduction }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li><h3>Commenter cette figure</h3></li>
        <li>
            {{ form_start(comment_form) }}
            {{ form_row(comment_form.comment) }}
            <button type="submit">Publier ce commentaire</button>
            {{ form_end(comment_form) }}
        </li>
        <li id="comments">
            <p class="loading"></p>
        </li>
    </ul>

    <ul>
        <li>
            <a href="{{ path('figures_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('figures_edit', { 'id': trick.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
