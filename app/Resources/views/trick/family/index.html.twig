{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('stylesheets/trick/family/index.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="columns">
            <table id="listing" class="table table-hover table-striped col-6 col-ml-auto col-mr-auto">
                <thead>
                    <tr>
                        <th class="text-bold text-uppercase">Groupes de figures ({{ families|length }})</th>
                        <th class="text-center"><a href="{{ path('figures_familles_new') }}" class="btn btn-primary btn-sm circle tooltip tooltip-left" data-tooltip="CrÃ©er un groupe">+</a></th>
                    </tr>
                </thead>
                <tbody>
                {% for family in families %}
                    <tr>
                        <td>{{ family.name ~ ' ('~ family.tricks|length ~')' }}</td>
                        <td class="text-right">
                            <a href="{{ path('figures_familles_edit', { 'id': family.id }) }}" class="btn btn-sm">Modifier</a>
                            <a href="{{ path('figures_familles_show', { 'id': family.id }) }}" class="btn btn-primary btn-sm">Parcourir</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
