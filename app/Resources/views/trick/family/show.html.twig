{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('stylesheets/trick/family/show.css') }}">
{% endblock %}

{% block body %}
    <div class="container">

        {# Breadcrumbs #}
        {% include 'component/inc/breadcrumb.html.twig' with { 'links' : {
            'Accueil' : path('homepage'),
            'Groupes' : path('figures_familles_index'),
            (family.name) : app.request.requestUri
        }} %}

        <div class="row">
            <div id="col-left" class="col-xs-6">
                <div class="row">
                    <div id="family-intro" class="col-xs-12">
                        <h1 class="text-uppercase text-bold text-break">{{ family.name }}</h1>
                        <div class="divider" data-content="PRESENTATION"></div>
                        <p class="text-justify">{{ family.introduction|nl2br|markdown|purify }}</p>
                    </div>

                    {% if is_granted('ROLE_USER') %}
                        <div id="family-actions" class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-6">
                                    <a href="{{ path("figures_familles_edit", { id : family.id }) }}" class="btn btn-primary text-bold text-uppercase">Modifier le groupe</a>
                                </div>
                                <div class="col-xs-6 text-right">
                                    {{ form_start(delete_form) }}
                                    <button type="submit" class="btn btn-default ask-confirm text-bold text-uppercase">Supprimer le groupe</button>
                                    {{ form_end(delete_form) }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div id="col-right" class="col-xs-6">
                <div class="row">

                    {# Your turn ! #}
                    <div class="col-xs-12">
                        <div id="leading-card">
                            <div class="row">
                                <div class="col-xs-8 text-gray">Ce groupe recense {{ family.tricks|length }} figures. {% if not is_granted('ROLE_USER') %}<br> <a href="{{ path('login') }}?_target_path={{ app.request.requestUri }}">Connectez-vous</a> pour l'Ã©diter.{% endif %}</div>
                                <div class="col-xs-4 text-right">
                                    <a href="{{ path('figures_new', { family : family.id }) }}" class="btn btn-warning text-uppercase text-bold"><i class="icon-plus-circled"></i> figure</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% for trick in family.tricks %}

                        <div class="col-xs-6">
                            <div class="card">
                                <div class="card-header text-ellipsis">
                                    <div class="card-title h5"><a href="{{ path('figures_show', { id : trick.id, slug : trick.slug }) }}">{{ trick.name }}</a></div>
                                    <div class="card-subtitle text-gray text-ellipsis">{{ trick.introduction|markdown|striptags }}</div>
                                </div>
                                <div class="card-image">
                                    <img src="{{ asset(trick.images.first.pathname) | imagine_filter('thumb_header') }}" class="img-responsive">
                                </div>
                                <div class="card-footer">
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path('remove_trick', { id : trick.id }) }}" class="btn btn btn-sm text-bold text-uppercase ask-confirm"><i class="icon-trash"></i></a>
                                        <a href="{{ path('figures_edit', { id : trick.id }) }}" class="btn btn btn-sm text-bold text-uppercase"><i class="icon-pencil"></i></a>
                                    {% endif %}
                                    <a href="{{ path('figures_show', { id : trick.id, slug : trick.slug }) }}" class="btn btn-primary btn-sm text-bold text-uppercase"><i class="icon-right-bold"></i></a>
                                </div>
                            </div>

                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

