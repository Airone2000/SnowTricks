{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('stylesheets/trick/family/show.css') }}">
{% endblock %}

{% block body %}
    <div class="container">

        {# Breadcrumbs #}
        {% include 'component/inc/breadcrumb.html.twig' with { 'links' : {
            'Accueil' : path('homepage'),
            'Groupes' : path('figures_familles_index'),
            (family.name) : app.request.requestUri
        }} %}

        <div class="columns">
            <div id="col-left" class="column col-6">
                <div class="container">
                    <div class="columns">
                        <div id="family-intro" class="column col-12">
                            <h1 class="text-uppercase text-bold text-break">{{ family.name }}</h1>
                            <div class="divider" data-content="PRESENTATION"></div>
                            <p class="text-justify">{{ family.introduction }}</p>
                        </div>

                        <div id="family-actions" class="column col-12">
                            <div class="columns">
                                <div class="column col-6">
                                    <a href="{{ path("figures_familles_edit", { id : family.id }) }}" class="btn btn-primary text-bold text-uppercase">Modifier le groupe</a>
                                </div>
                                <div class="column col-6 text-right">
                                    {{ form_start(delete_form) }}
                                        <button type="submit" class="btn ask-confirm text-bold text-uppercase">Supprimer le groupe</button>
                                    {{ form_end(delete_form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div id="col-right" class="column col-6">
                <div class="columns">

                    {# Your turn ! #}
                    <div class="column col-6">
                        <div id="leading-card" class="card">
                            <div class="card-header text-ellipsis">
                                <div class="card-title h5 text-uppercase text-bold text-center">A vous de jouer !</div>
                            </div>
                            <div class="divider"></div>
                            <div class="card-body">
                                <p class="text-justify">Vous connaissez peut-Ãªtre une magnifique figure qui trouverait sa place ici ?</p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path("figures_new", { family : family.id }) }}" class="btn btn-primary btn-block text-bold text-uppercase">Partager ma figure</a>
                            </div>
                        </div>
                    </div>

                    {% for trick in family.tricks %}

                        <div class="column col-6">
                            <div class="card">
                                <div class="card-header text-ellipsis">
                                    <div class="card-title h5">{{ trick.name }}</div>
                                    <div class="card-subtitle text-gray text-ellipsis">{{ trick.introduction }}</div>
                                </div>
                                <div class="card-image">
                                    <img src="{{ asset(trick.images.first.pathname) | imagine_filter('thumb_header') }}" class="img-responsive">
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group btn-group-block">
                                        <a href="{{ path('figures_edit', { id : trick.id}) }}" class="btn btn btn-sm text-bold text-uppercase">Modifier</a>
                                        <a href="{{ path('figures_show', { id : trick.id}) }}" class="btn btn-primary btn-sm text-bold text-uppercase">Voir</a>
                                    </div>
                                </div>
                            </div>

                        </div>

                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

